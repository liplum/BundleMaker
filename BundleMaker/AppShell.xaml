<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="BundleMaker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BundleMaker"
    Shell.FlyoutBehavior="Flyout">
    <FlyoutItem Title="{local:I18N Key=Shell.Project}">
        <ShellContent Title="{local:I18N Key=Shell.Project.Project}"
            ContentTemplate="{DataTemplate local:ProjectPage}">
        </ShellContent>
    </FlyoutItem>
    <FlyoutItem Title="{local:I18N Key=Shell.Main}">
        <ShellContent Title="{local:I18N Key=Shell.Main.Edit}"
            ContentTemplate="{DataTemplate local:EditPage}">
        </ShellContent>
        <ShellContent Title="{local:I18N Key=Shell.Main.Translate}"
            ContentTemplate="{DataTemplate local:TranslatePage}">
        </ShellContent>
    </FlyoutItem>
    <FlyoutItem Title="{local:I18N Key=Shell.More}">
        <ShellContent Title="{local:I18N Key=Shell.More.Settings}"
            ContentTemplate="{DataTemplate local:SettingsPage}">
        </ShellContent>
    </FlyoutItem>
</Shell>